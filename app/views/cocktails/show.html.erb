<div class="cocktail-info">
  <div class="card-cocktail" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path(['cocktail1.jpg', 'cocktail2.jpg', 'cocktail3.jpg', 'cocktail4.jpg', 'cocktail5.jpg', 'cocktail6.jpg', 'cocktail7.jpg'].sample) %>)">
    <%= @cocktail.name %>
  </div>
  <div class="cocktail-description">
    <h3>Ingredients: </h3>
    <div class="ingredients-list">
      <% @doses.each do |dose| %>
        <div class="ingredient">
          <span><%= dose.ingredient.name %>, <strong><%= dose.description%></strong></span>
          <span>
            <%= link_to dose_path(dose), method: :delete, id: "bin-link" do%>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </span>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= link_to "+ Add a dose", new_cocktail_dose_path(@cocktail), class: 'btn btn-ghost' %>
